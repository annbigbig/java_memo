		int[] types = (int[])searchParams.get("types");
		PreparedStatementCreatorFactory psCreatorFactory = new PreparedStatementCreatorFactory(sql,types);
		//product = jdbcTemplate.query(psCreatorFactory.newPreparedStatementCreator(values,new 
		return null;
